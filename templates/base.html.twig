<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Immo{% endblock %}</title>
        <!-- Bootstrap -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <!-- CSS -->
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <!-- Icone de l'onglet -->
        <link rel="icon" href="{{ asset('img/icon.png') }}">


        {% block stylesheets %} {% endblock %}

        {% block javascripts %}{% endblock %}
    </head>

    <body>

        <header>
            <img src="{{ asset('img/bandeau-village.jpg') }}" class="img-fluid img-bandeau" alt="image village">
            {% include 'nav/nav.html.twig' %}
        </header>

        <!-- Gestion de message flash -->
        {% for label, messages in app.flashes %}
            <div class="alert alert-success">
                {% for message in messages %}
                    <div>
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}

        {% block body %} {% endblock %}

        <footer class="footer mt-auto py-3 bg-light">
            <div class="footer_contents container">
                <span class="text-muted">@Site-Immo {{ "now"|date("Y") }}</span>
            </div>
        </footer>

        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

    </body>
</html>
